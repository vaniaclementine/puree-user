generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Address {
  id             String   @id
  province       String
  city           String
  address_line_1 String
  merchantId     String   @unique
  Merchant       Merchant @relation(fields: [merchantId], references: [userId])
}

model Cart {
  id         String     @id
  createdAt  DateTime   @default(now())
  totalPrice Float
  userId     String     @unique
  User       User       @relation(fields: [userId], references: [id])
  CartItem   CartItem[]
}

model CartItem {
  id       String @id
  cartId   String
  itemId   String
  quantity Int
  Item     Item   @relation(fields: [itemId], references: [id])
  Cart     Cart   @relation(fields: [cartId], references: [id])
}

model Driver {
  id        String    @id
  createdAt DateTime  @default(now())
  userId    String    @unique
  User      User      @relation(fields: [userId], references: [id])
  Vehicle   Vehicle[]
}

model Item {
  id          String      @id
  name        String
  description String
  price       Int
  picture     String?
  merchantId  String
  CartItem    CartItem[]
  Merchant    Merchant    @relation(fields: [merchantId], references: [id])
  OrderItem   OrderItem[]
}

model Merchant {
  id      String   @id
  userId  String   @unique
  Address Address?
  Item    Item[]
  User    User     @relation(fields: [userId], references: [id])
}

model Order {
  id         String      @id
  totalPrice Float
  createdAt  DateTime    @default(now())
  orderEnd   DateTime
  OrderItem  OrderItem[]
}

model OrderItem {
  id       String @id
  orderId  String
  itemId   String
  quantity Int
  Item     Item   @relation(fields: [itemId], references: [id])
  Order    Order  @relation(fields: [orderId], references: [id])
}

model User {
  id       String    @id
  name     String?
  email    String?   @unique
  password String?
  phone    String?
  image    String?
  balance  Int?
  Cart     Cart?
  Driver   Driver?
  Merchant Merchant?
}

model Vehicle {
  id          String   @id
  plateNumber String   @unique
  brand       String
  series      String
  color       String
  year        DateTime
  driverId    String
  Driver      Driver   @relation(fields: [driverId], references: [id], onDelete: Cascade)
}
